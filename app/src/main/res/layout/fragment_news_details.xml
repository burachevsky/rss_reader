<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.newsdetail.NewsDetailsFragment">

    <data>
        <variable
            name="viewModel"
            type="com.burachevsky.rssfeedreader.ui.screens.newsdetail.NewsDetailsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.item.title}"
                    tools:text="With British soccer clubs barred from traveling to Germany, the Champions League is disrupted."
                    android:textIsSelectable="true"/>
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/channelTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.item.channel.title}"
                    android:textAppearance="?attr/textAppearanceCaption"
                    tools:text="Android Police - Android news, reviews, apps, games, phones, tablets"/>

                <TextView
                    android:id="@+id/authorAndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceCaption"
                    setAuthorAndDate="@{viewModel.item}"
                    tools:text="by Corbin Davenport | Sun, 14 Feb 2021 18:32:48"/>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/htmlViewer"
                    android:textIsSelectable="true"
                    tools:text="With British soccer clubs barred from traveling to Germany, the Champions League is disrupted."
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:renderHtml="@{viewModel.item.description}"/>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    setCategories="@{viewModel.item.categories}"
                    android:textAppearance="?attr/textAppearanceCaption"
                    tools:text="Google, Nest Audio, News, google nest audio"/>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbarCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="120dp"
            app:cardElevation="10dp"
            android:paddingEnd="36dp"
            android:paddingStart="36dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    style="?android:actionOverflowButtonStyle"
                    android:contentDescription="@string/back" />

                <ImageButton
                    android:id="@+id/openInBrowser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_globe"
                    style="?android:actionOverflowButtonStyle"
                    android:contentDescription="@string/open_in_browser" />

                <com.burachevsky.rssfeedreader.utils.LikeButton
                    android:id="@+id/likeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:likeImage="@drawable/ic_like_filled"
                    app:unlikeImage="@drawable/ic_like"
                    style="?android:actionOverflowButtonStyle"
                    android:contentDescription="@string/add_to_collection"/>

                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    style="?android:actionOverflowButtonStyle"
                    android:contentDescription="@string/share"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>